<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/stylefordashboard.css">

    
    <link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">


	<!-- fa fa font -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Horizone</title>
</head>

<body>
    
    <%- include ('../include/sideBarAdmin') -%>
    
    <div class="main-content">   
        <main>
            <section class="recent">
                <section class="recent">
                    <h3>Recent activity </h3>
                    <% if (message) { %> 
                        <div style="text-align: center; " class="alert alert-<%= message.type %> alert-dismissible fade show" id="alert-message">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong><%= message.message %></strong>
                        </div>
                    <% } %>
                    <table id="contacts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Creator</th>
                                <th>Detail</th>
                                <th>Date</th>
                                <th>Confirm/Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% eventData.forEach((data) =>{%>
                            <tr>
                                <td><%= data.event_name %></td>
                                <td><%= data.info_name %></td>
                                <td><a href="/event/<%=data.event_id%>" style="color: #8B475D; font-size: 18px;"><i class="fa fa-eye"></i></a></td>
                                <td><%= data.event_date.getDate()%>/<%= data.event_date.getMonth() + 1 %>/<%= data.event_date.getFullYear()%></td>
                                <td>
                                    <a href="/confirmEvent/<%=data.event_id%>" onclick="confirm_event()" style="color: #8B475D; font-size: 18px;"><i class="fa fa-check-square"></i></a>
                                    <a href="/confirmEvent/delete/<%=data.event_id%>" onclick="confirm_delete()" style="color: #8B475D; font-size: 18px;"><i class="fa fa-window-close"></i></a>
                                </td>
                            </tr>
                            <%}) %>
                        </tbody>
                    </table>
                </section> 
            </section>        
        </main>  
    </div>
    

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#contacts').DataTable();
        });
        function confirm_delete(){
           return confirm('Are you sure to delete');
        }
        function confirm_event(){
           return confirm('Are you sure to confirm');
        }
    </script>
    <script src="/js/alert.js"> </script>
</body>

</html>



