<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/stylefordashboard.css">

    <!-- fa fa font -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <title>Horizone</title>
</head>

<style>
	.error{
	  color: #CD3333;
	}
</style>

<body>

    <%- include ('../include/sidebar') -%> 
    
    <div class="main-content">   

        <main>
            <div class="container">
                <div class="row">
                    <div class="mx-auto">
                        <form action="/editProfile" id="confirmform" method="POST" role="form">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3><b>Edit Your Profile</b></h3>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                        <label><i class="fa fa-envelope"></i> Email</label>
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="info_email" value="<%=profileData.info_email%>">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    
                                    <label><i class="fa fa-user"></i> User Name</label>
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="info_name" value="<%=profileData.info_name%>">
                                    </div>
                                </div>
                                <div class="col-md-12 mt-2">
                                    <label><i class="fa fa-calendar"></i> Date of birth</label>
                                    <div class="form-floating">
                                        <input type="date" class="form-control" name="info_dob" >
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mt-1">
                                    <div class="wrap">
                                        <label><i class="fa fa-phone"></i> Phone</label>
                                        <div class="form-floating">
                                            <input type="text" class="form-control" name="info_phone" value="<%=profileData.info_phone%>">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mt-1">
                                    <label><i class="fa fa-briefcase"></i> Position</label>
                                    <div class="form-floating">
                                        <select style="width: 220px; height: 35px" name="info_position">
                                            <% positionData.forEach((data) =>{%>  
                                                <option value="<%=data.position_id %>"><%=data.position_name %></option>
                                            <%}) %>
                                            </select>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button class="btn btn-primary profile-btn btn-block" type="submit"><i class="fa fa-save"></i> Save Profile</button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>  
    </div>
    
	<script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/jquery.validate.js"></script>
  
    <script type="text/javascript">
  
      $( document ).ready( function () {
        // Thêm mã lệnh tại đây
        $("#confirmform").validate({
          errorElement: "em", // Thông báo lỗi sẽ được đặt trong thẻ <em>.
          highlight: function (element) {
          // Làm thế nào để làm nổi bật trường nhập liệu lỗi: thêm lớp
          // 'has-error', xóa lớp 'has-success' ở thẻ <div> cha của thẻ
          // <input> bị lỗi (tham số element là một đối tượng jQuery đại
          // diện cho thẻ <input> bị lỗi).
            $(element).parent().addClass("has-error")
            $(element).parent().addClass("error")
  
          },
          unhighlight: function (element) {
          // Ngược lại với tùy chọn highlight ở trên.
            $(element).parent().removeClass("has-error")
            $(element).parent().addClass("has-success")
  
          },
  
          rules:{
			info_name: "required",
			info_email: {
				required: true,
				email: true
			},
            info_dob: {
                required: true,
                date: true
            },
            info_phone: {
                required: true,
                digits: true
            },
          },
          messages: {
            info_name: "Please enter your name",
            info_email: "Please enter your email",
            info_dob: "Please enter your dob",
            info_phone: {
                required: "Please enter your phone",
                date: "Please type number only"
            }

          },
        });
      } );
    </script>


</body>

</html>