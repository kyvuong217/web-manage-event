<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <base href="/">
    <link rel="stylesheet" href="css/stylefordashboard.css">

    <!-- fa fa font -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Horizone</title>
</head>
    
<style>
	.error{
	  color: #CD3333;
	}
</style>

<body>
    
    <%- include ('../include/sideBar') -%>
    
    <div class="main-content">   
        <main>
            <form action="/insertExcel" id="confirmform" enctype="multipart/form-data" method="post">
                <input type="file" name="excel" accept='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel' >
                <input type="submit" value="Upload Excel">
              </form>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="/js/alert.js"> </script>
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/jquery.validate.js"></script>
  
    <script type="text/javascript">
  
      $( document ).ready( function () {
        // Thêm mã lệnh tại đây
        $("#confirmform").validate({
          errorElement: "em", // Thông báo lỗi sẽ được đặt trong thẻ <em>.
          highlight: function (element) {
          // Làm thế nào để làm nổi bật trường nhập liệu lỗi: thêm lớp
          // 'has-error', xóa lớp 'has-success' ở thẻ <div> cha của thẻ
          // <input> bị lỗi (tham số element là một đối tượng jQuery đại
          // diện cho thẻ <input> bị lỗi).
            $(element).parent().addClass("has-error")
            $(element).parent().addClass("error")
  
          },
          unhighlight: function (element) {
          // Ngược lại với tùy chọn highlight ở trên.
            $(element).parent().removeClass("has-error")
            $(element).parent().addClass("has-success")
  
          },
          rules:{
            excel: "required",

          },
          messages: {
            excel: "Please enter name of event",
          },
        });
        });
    </script>

</body>

</html>