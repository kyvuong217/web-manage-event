<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- fa fa font -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Title -->
    <title>Horizone</title>
</head>

<style>  
.recent {
    margin-top: 3rem;
    margin-bottom: 3rem;
    width: 100%;
}

</style>

<body>
    <div class="container">
      <%- include ('../include/header') -%> 
      <br><br>
      <div class="title">EVENT</div>
        <section class="recent">
            <h3>Recent activity </h3>
            <table id="contacts" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Creator</th>
                        <th>Category</th>
                        <th>Cooperative</th>
                        <th>Detail</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% eventData.forEach((data) =>{%>
                    <tr>
                        <td><%= data.event_name %></td>
                        <td><%= data.info_name %></td>
                        <td><%= data.category_name %></td>
                        <td><%= data.cooperative_name %></td>
                        <td><a href="/eventAll/<%=data.event_id%>" style="color: #00688B; font-size: 18px;"><i class="fa fa-eye"></i></a></td>
                        <td>
                          <% var date = new Date();
                          if(data.event_date.getFullYear() > date.getFullYear()){%>
                              <div class="status" style="background-color: darkcyan; width: 20px; height: 20px; border-radius: 50%;"></div>
                          <%}else if(data.event_date.getFullYear() == date.getFullYear()){%>
                              <%if(data.event_date.getMonth() > date.getMonth()){%>
                                  <div class="status" style="background-color: darkcyan; width: 20px; height: 20px; border-radius: 50%;"></div>
                              <%}else if(data.event_date.getMonth() == date.getMonth()){%>
                                  <%if(data.event_date.getDate() > date.getDate()){%>
                                      <div class="status" style="background-color: darkcyan; width: 20px; height: 20px; border-radius: 50%;"></div>
                                  <%}else if(data.event_date.getDate() == date.getDate()){%>
                                      <div class="status" style="background-color: #ECAB53; width: 20px; height: 20px; border-radius: 50%;"></div>
                                  <%}else{%>
                                      <div class="status" style="background-color: gray; width: 20px; height: 20px; border-radius: 50%;"></div>
                                  <%}%>
                              <%}else{%>
                                  <div class="status" style="background-color: gray; width: 20px; height: 20px; border-radius: 50%;"></div>
                              <%}%>
                          <%}else{%>
                              <div class="status" style="background-color: gray; width: 20px; height: 20px; border-radius: 50%;"></div>
                          <%}%>
                        </td>
                        <td><%= data.event_date.getDate()%>/<%= data.event_date.getMonth() + 1 %>/<%= data.event_date.getFullYear()%></td>
                    </tr>
                    <%}) %>
                </tbody>
            </table>
            <div class="feature__content">
                <div class="feature_grid">
                  <div class="feature_item">
                    <div class="feature_icon">
                      <img src="/img/setting.png" />
                    </div>
                  </div>
                  <div class="feature_item">
                    <div class="feature_icon">
                      <img src="/img/sta1.png" />
                    </div>
                  </div>
                  <div class="feature_item">
                    <div class="feature_icon">
                      <img src="/img/setting1.png"/>
                    </div>
                  </div>
                </div>
            </div>
        </section>

    </div>
    <%- include ('../include/footer') -%> 
    

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <!-- Optional JavaScript -->
    <script>
        $(document).ready(function() {
            $('#contacts').DataTable();
        });
    </script>
</body>

</html>